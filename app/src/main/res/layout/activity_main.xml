<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/celebrityPicture"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="609dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <Button
        android:id="@+id/celebrityName0"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:onClick="checkAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celebrityPicture"
        app:layout_constraintVertical_bias="0.007" />


    <Button
        android:id="@+id/celebrityName1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="197dp"
        android:onClick="checkAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celebrityName0"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/celebrityName2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="197dp"
        android:onClick="checkAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celebrityName1"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/celebrityName3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="27dp"
        android:onClick="checkAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celebrityName2"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>